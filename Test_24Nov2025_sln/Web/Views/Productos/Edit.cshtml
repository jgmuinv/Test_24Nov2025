@model Contratos.Productos.ActualizarProductoRequest

@{
    ViewData["Title"] = "Editar producto";
}

<h1>Editar producto</h1>
<form asp-action="Edit" method="post">
    <hr/>
    @* Si hay un mensaje lo muestra *@
    @if (TempData["Mensaje"] != null) {
        <div class="alert alert-@TempData["TipoMensaje"]">@TempData["Mensaje"]</div>
    }
    @if (Model.Mensaje != null) {
        <div class="alert alert-@Model.TipoMensaje">@Model.Mensaje</div>
    }
    <div class="container">
        <div class="row">
            <div class="col-md-4">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-4">
                    <label asp-for="Id" class="control-label fw-bold"></label>
                    <input asp-for="Id" readonly="readonly" class="form-control"/>
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Nombre" class="control-label fw-bold"></label>
                    <input asp-for="Nombre" class="form-control"/>
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Precio" class="control-label fw-bold"></label>
                    <input asp-for="Precio" class="form-control"  type="number" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <hr/>
    <div class="form-group mb-4">
        <input type="submit" value="Guardar" class="btn btn-primary"/>
        @Html.ActionLink("Regresar", "Index", null, null, new {@class = "btn btn-secondary"})
    </div>    
</form>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}