@model Contratos.Productos.ProductoDto

@{
    ViewData["Title"] = "Ver producto";
}
<h2>Ver producto</h2>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group mb-4">
                <b>Código:</b> @Html.DisplayFor(model => model.Id)
        </div>
            <div class="form-group mb-4">
                <b>Nombre: </b>@Html.DisplayFor(model => model.Nombre)
        </div>
            <div class="form-group mb-4">
                <b>Precio: </b>@Html.DisplayFor(model => model.Precio)
        </div>
        </div>
    </div>    
</div>
<hr />
<div>
    @Html.ActionLink("Regresar","Index",null,null,new {@class="btn btn-secondary"})
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}