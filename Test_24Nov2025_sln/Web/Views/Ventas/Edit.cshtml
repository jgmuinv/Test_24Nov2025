@model Web.Models.VentasEditarEncabezadoViewModel

@{
    ViewData["Title"] = "Editar venta";
}

<h1>Editar venta</h1>

<form asp-action="Edit" method="post">
    <hr/>
    @* Si hay un mensaje lo muestra *@
    @if (TempData["Mensaje"] != null) {
        <div class="alert alert-@TempData["TipoMensaje"]">@TempData["Mensaje"]</div>
    }
    @if (Model.Mensaje != null) {
        <div class="alert alert-@Model.TipoMensaje">@Model.Mensaje</div>
    }
    <div class="container">
        <div class="row">
            <div class="col-md-4">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-4">
                    <b>Fecha:</b> @Html.DisplayFor(model => model.Fecha)
                </div>
                <div class="form-group mb-4">
                    <b>Vendedor: </b>@Html.DisplayFor(model => model.NombreVendedor)
                </div>
                <div class="form-group mb-4">
                    <b>Total: </b>@Html.DisplayFor(model => model.Total)
                </div>
            </div>
        </div>
        <div class="card">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-4">
                <label asp-for="NuevoDvIdPro" class="control-label fw-bold"></label>
                <input asp-for="NuevoDvIdPro" readonly="readonly" class="form-control"/>
                <span asp-validation-for="NuevoDvIdPro" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="NuevoDvProducto" class="control-label fw-bold"></label>
                <input asp-for="NuevoDvProducto" class="form-control"/>
                <span asp-validation-for="NuevoDvProducto" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="NuevoDvPrecio" class="control-label fw-bold"></label>
                <input asp-for="NuevoDvPrecio" class="form-control"  type="number" />
                <span asp-validation-for="NuevoDvPrecio" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="NuevoDvCantidad" class="control-label fw-bold"></label>
                <input asp-for="NuevoDvCantidad" class="form-control"  type="number" />
                <span asp-validation-for="NuevoDvCantidad" class="text-danger"></span>
            </div>
            <div class="col-md-2 d-flex gap-2 align-items-end">
                <button type="submit" class="btn btn-primary">Agregar detalle</button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th class="col-3">Fecha</th>
                        <th class="col-3">Producto</th>
                        <th class="col-1 text-center">Precio</th>
                        <th class="col-1 text-center">Cantidad</th>
                        <th class="col-2 text-center">Total</th>
                        <th class="col-1 text-center">IVA</th>
                        <th class="col-1 text-center">Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    @if (Model?.DetalleVenta != null)
                    {
                        @foreach (var p in Model.DetalleVenta)
                        {
                            <tr>
                                <td>@p.Fecha</td>
                                <td>@p.NombreProducto</td>
                                <td class="text-center">@Html.DisplayFor(_ => p.Precio)</td>
                                <td class="text-center">@Html.DisplayFor(_ => p.Cantidad)</td>
                                <td class="text-center">@Html.DisplayFor(_ => p.Total)</td>
                                <td class="text-center">@Html.DisplayFor(_ => p.Iva)</td>
                                <td class="text-center">
                                    @* <a asp-action="Edit" asp-route-id="@p.Idde" class="btn btn-sm btn-primary">Editar</a> *@
                                    <form asp-action="Delete" asp-route-id="@p.Idde" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('¿Eliminar?');">Eliminar</button>
                                    </form>
                                </td>
                            </tr>
                        }       
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <hr/>
    <div class="form-group mb-4">
        <input type="submit" value="Guardar" class="btn btn-primary"/>
        @Html.ActionLink("Regresar", "Index", null, null, new {@class = "btn btn-secondary"})
    </div>    
    @Html.HiddenFor(x => x.Idventa)
</form>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}