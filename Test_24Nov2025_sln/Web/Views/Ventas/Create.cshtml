@model Web.Models.VentasCrearEncabezadoViewModel

@{
    ViewData["Title"] = "Crear venta";
}
<h1>Crear venta</h1>
<form asp-action="Create" method="post">
    <hr/>
    @* Si hay un mensaje lo muestra *@
    @if (TempData["Mensaje"] != null) {
        <div class="alert alert-@TempData["TipoMensaje"]">@TempData["Mensaje"]</div>
    }
    @if (Model.Mensaje != null) {
        <div class="alert alert-@Model.TipoMensaje">@Model.Mensaje</div>
    }
    
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-4">
                    <label asp-for="IdVendedor" class="control-label fw-bold"></label>
                    @Html.DropDownListFor(x => x.IdVendedor, Model.ListaUsuarios, "-- Seleccione --", new { @class = "form-select" })
                    <span asp-validation-for="IdVendedor" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <hr/>
    <div class="form-group mb-4">
        <input type="submit" value="Guardar" class="btn btn-primary"/>
        @Html.ActionLink("Regresar", "Index", null, null, new {@class = "btn btn-secondary"})
    </div>   
</form>